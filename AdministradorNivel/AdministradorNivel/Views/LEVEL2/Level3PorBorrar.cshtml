@model IEnumerable<AdministradorNivel.Models.LEVEL3>
@{
    ViewBag.Title = "Level3PorBorrar";
}
<h2>Si borra este nivel @ViewBag.Level2.NAME_LEVEL2 se borraran los siguientes niveles 2</h2>
<h3>¿Desea borrarlo de todas maneras?</h3>

<p>
    @Html.ActionLink("Borrar todo", "DeleteAll", new { id = ViewBag.Level2.ID_LEVEL2 })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NAME_LEVEL3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LEVEL2.NAME_LEVEL2)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NAME_LEVEL3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LEVEL2.NAME_LEVEL2)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_LEVEL3 }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_LEVEL3 }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_LEVEL3 })
            </td>
        </tr>
    }

</table>
